# Mofy Agent Framework 环境配置示例

# LLM配置
LLM_PROVIDER=openai
MODEL_NAME=gpt-4o
TEMPERATURE=0.7
OPENAI_API_KEY=your_openai_api_key_here

# 硅基流动配置 (可选)
# LLM_PROVIDER=siliconflow
# MODEL_NAME=deepseek-ai/DeepSeek-R1-Distill-Qwen-32B
# SILICONFLOW_API_KEY=your_siliconflow_api_key_here
# SILICONFLOW_BASE_URL=https://api.siliconflow.cn/v1

# 记忆配置
SHORT_TERM_TTL=3600
ENABLE_LONG_MEMORY=true
REDIS_URL=redis://localhost:6379/0

# 工具配置
TOOL_TIMEOUT=3
TOOL_RETRIES=2

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/mofy.log

# Docker环境配置
REDIS_HOST=redis
REDIS_PORT=6379
FLASK_ENV=production
FLASK_DEBUG=0
PYTHONPATH=/app

# 开发环境配置
# REDIS_HOST=redis-dev
# REDIS_PORT=6379
# FLASK_ENV=development
# FLASK_DEBUG=1
# LOG_LEVEL=DEBUG

# WSL专用配置
WSL_MODE=1
WSL_PROJECT_PATH=/mnt/d/Workshop/ai4se/mofiy
WSL_DOCKER_COMPOSE_FILE=docker-compose.wsl.yml